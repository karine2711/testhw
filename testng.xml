<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests">
    <test verbose="2" name="Chrome Tests">
      <parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.SearchTests">
                <methods>
                    <include name="searchThroughHomepageBubbles"/>
                    <include name="searchThroughSearchBarAndSortByPrice"/>
                    <include name="addToFavoritesThanRemove"/>
                    <include name="testFilterByPrice"/>
                    <include name="testFilterByType"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2"  name="Edge Tests">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="tests.SearchTests">
                <methods>
                    <include name="searchThroughHomepageBubbles"/>
                    <include name="searchThroughSearchBarAndSortByPrice"/>
                    <include name="addToFavoritesThanRemove"/>
                    <include name="testFilterByPrice"/>
                    <include name="testFilterByType"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2" name="Firefox Tests">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.SearchTests">
                <methods>
                    <include name="searchThroughHomepageBubbles"/>
                    <include name="searchThroughSearchBarAndSortByPrice"/>
                    <include name="addToFavoritesThanRemove"/>
                    <include name="testFilterByPrice"/>
                    <include name="testFilterByType"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>